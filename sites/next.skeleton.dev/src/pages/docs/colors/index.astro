---

<LayoutDocs {...layoutProps}>
	<!-- Colors -->
    <section class="space-y-4">
		<h2 class="h2">Palette</h2>
		<pre class="pre">{`.bg-primary-{value}`}</pre>
		<!-- Loop Colors -->
		<div class="space-y-4 lg:space-y-0.5">
			{palette.map(color => (
				<div class="grid grid-cols-1 lg:grid-cols-[100px_auto] gap-0 lg:gap-4 items-center">
					<small class="opacity-60">{color.name}</small>
					<div class="grid grid-cols-11 gap-0.5">
						{/* Loop Ramp */}
						{color.ramp.map(shade => (
							<div class={`${shade.base} py-3 flex justify-center items-center`}>
								<strong class:list={[ shade.contrast, { underline: shade.value === 500 }, 'text-sm rounded-container' ]} >
									{shade.value}
								</strong>
							</div>
						))}
					</div>
				</div>
			))}
		</div>
    </section>
	<!-- Color Pairings -->
	<section class="space-y-4">
		<h2 class="h2">Pairings</h2>
		<pre class="pre">{`.bg-primary-{l}-{d}`}</pre>
		<!-- Diagram -->
		<div class="grid grid-cols-[112px_1fr] gap-2 md:gap-4 item-center">
