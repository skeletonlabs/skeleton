---
import { Icon } from 'astro-icon/components';
import { ChevronRight as IconChevron } from 'lucide-react';
---

<div class="grid grid-cols-1 xl:grid-cols-[256px_800px] gap-20">
	<!-- Mascot -->
	<div class="flex justify-center items-center">
		<div class="relative size-48 md:size-64 aspect-square">
			<Icon class="absolute top-0 left-0 z-[1] size-full aspect-square drop-shadow-md" name="skeleton-full" />
			<div class="absolute top-0 left-0 size-full aspect-square rounded-full bg-conic from-primary-500 to-success-500 blur-3xl"></div>
		</div>
	</div>
	<!-- Hero Text -->
	<div class="self-center space-y-4">
		<!-- Announcement -->
		<!-- <a href="/#" class="btn btn-sm preset-filled-primary-500 gap-2 shadow">
			<span>ðŸŽ‰</span>
			<span>Skeleton v3 now avilable!</span>
			<IconChevron className="size-4" />
		</a> -->
		<!-- Text -->
		<h1 class="heading-font-family text-4xl md:text-6xl font-bold xl:text-balance">An adaptive design system powered by Tailwind CSS.</h1>
		<p class="text-xl xl:text-balance">
			Skeleton extends <a class="underline" href="https://tailwindcss.com/" target="_blank">Tailwind CSS</a> to create <a
				class="underline"
				href="https://themes.skeleton.dev/themes/create"
				target="_blank">customizable</a
			> design systems, and provides easy to use components for modern web frameworks.
		</p>
		<!-- CTA Buttons -->
		<nav class="flex gap-4">
			<a href="/docs/get-started/installation" class="btn preset-filled">
				<span>Get Started</span>
				<IconChevron className="size-4" />
			</a>
			<a href="/docs/get-started/introduction" class="btn preset-outlined-surface-800-200 hover:preset-tonal">
				<span>Learn More</span>
			</a>
		</nav>
	</div>
</div>
