---
import { Icon } from 'astro-icon/components';
import { ChevronRight as IconChevron } from 'lucide-react';
---

<div class="grid grid-cols-1 gap-20 xl:grid-cols-[256px_800px]">
	<!-- Mascot -->
	<div class="flex items-center justify-center">
		<div class="relative aspect-square size-48 md:size-64">
			<Icon class="absolute left-0 top-0 z-[1] aspect-square size-full drop-shadow-md" name="skeleton-full" />
			<div class="bg-conic from-success-500 to-primary-500 absolute left-0 top-0 aspect-square size-full rounded-full blur-3xl"></div>
		</div>
	</div>
	<!-- Hero Text -->
	<div class="space-y-4 self-center">
		<!-- Announcement -->
		<!-- <a href="/#" class="btn btn-sm preset-filled-primary-500 gap-2 shadow">
			<span>ðŸŽ‰</span>
			<span>Support for Tailwind v4 added</span>
			<IconChevron className="size-4" />
		</a> -->
		<!-- Text -->
		<h1 class="heading-font-family text-4xl font-bold md:text-5xl xl:text-balance">An adaptive design system powered by Tailwind CSS.</h1>
		<p class="xl:text-balance">
			Skeleton integrates with <a class="underline" href="https://tailwindcss.com/" target="_blank">Tailwind</a> to provide an opinionated solution
			for generating adaptive design systems. Including easy to use components for your favorite web frameworks.
		</p>
		<!-- CTA Buttons -->
		<nav class="flex gap-4">
			<a href="/docs/get-started/installation" class="btn preset-filled">
				<span>Get Started</span>
				<IconChevron className="size-4" />
			</a>
			<a href="/docs/get-started/introduction" class="btn preset-outlined-surface-800-200 hover:preset-tonal">
				<span>Learn More</span>
			</a>
		</nav>
	</div>
</div>
