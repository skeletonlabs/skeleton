---
import { ChevronRightIcon } from '@lucide/svelte';
import Footer from '@/components/ui/footer.astro';
import Header from '@/components/ui/header/header.astro';
import RootLayout from '@/components/layouts/root-layout.astro';
import SkeletonBig from '@/assets/branding/skeleton-big.svg';
import ComponentGrid from '@/components/landing-page/component-grid.svelte';
import LiveDemos from '@/components/landing-page/live-demos.astro';
import DesignSystem from '@/components/landing-page/design-system.svelte';
import TailwindAndFrameworkComponents from '@/components/landing-page/tailwind-and-framework-components.svelte';
import AdditionalFeatures from '@/components/landing-page/additional-features.astro';
import OpenSource from '@/components/landing-page/open-source.astro';
import Metrics from '@/components/landing-page/metrics.astro';
import Sponsors from '@/components/landing-page/sponsors.astro';
import BuildWithSkeletonToday from '@/components/landing-page/build-with-skeleton-today.astro';
import { resolvePath } from '@/modules/resolve-path';
---

<RootLayout>
	<Header />
	<main>
		<div class="gradient-homepage-one">
			<section class="container mx-auto flex justify-center p-10 pt-20 pb-5">
				<div class="grid grid-cols-1 xl:grid-cols-[256px_800px] gap-20">
					<div class="flex justify-center items-center">
						<div class="relative size-48 md:size-64 aspect-square">
							<SkeletonBig class="absolute top-0 left-0 z-2 size-full aspect-square drop-shadow-md fill-current" />
							<div
								class="absolute top-0 left-0 size-full aspect-square rounded-full bg-conic from-success-500 to-primary-500 blur-3xl spin-360"
							>
							</div>
						</div>
					</div>
					<div class="self-center space-y-4">
						<a href="/#" target="_blank" class="btn btn-sm preset-filled-primary-500 gap-2 shadow">
							<div class="bg-surface-950-50 aspect-square size-2 rounded-full"><!-- dot --></div>
							<span>New documentation updates!</span>
							<ChevronRightIcon class="size-4" />
						</a>
						<h1 class="heading-font-family text-4xl md:text-5xl font-bold xl:text-balance">The adaptive design system for Tailwind CSS.</h1>
						<p class="xl:text-balance">
							Skeleton uses <a class="underline" href="https://tailwindcss.com/" target="_blank">Tailwind</a> as the foundation for building
							adaptive design systems. Including turnkey components for your favorite web frameworks.
						</p>
						<nav class="flex gap-4">
							<a href={resolvePath(Astro.params, '/docs/[framework]/get-started/installation')} class="btn preset-filled">
								<span>Get Started</span>
								<ChevronRightIcon class="size-4" />
							</a>
							<a
								href={resolvePath(Astro.params, '/docs/[framework]/get-started/introduction')}
								class="btn preset-outlined-surface-800-200 hover:preset-tonal"
							>
								<span>Learn More</span>
							</a>
						</nav>
					</div>
				</div>
			</section>
			<section class="hidden 2xl:block container mx-auto p-10 py-20">
				<ComponentGrid client:visible />
			</section>
			<section class="hidden md:block container mx-auto p-10 py-20">
				<LiveDemos />
			</section>
		</div>
		<div class="gradient-homepage-two">
			<section class="container mx-auto p-10 py-20">
				<DesignSystem client:visible />
			</section>
			<section class="container mx-auto p-10 py-20">
				<TailwindAndFrameworkComponents client:visible />
			</section>
			<section class="container mx-auto p-10 py-20">
				<AdditionalFeatures />
			</section>
			<section class="container mx-auto p-10 py-20">
				<OpenSource />
			</section>
			<section class="container mx-auto p-10 py-20">
				<Metrics />
			</section>
		</div>
		<section class="container mx-auto p-10 py-20">
			<Sponsors />
		</section>
		<section class="container mx-auto p-10 py-20">
			<BuildWithSkeletonToday />
		</section>
	</main>
	<Footer />
</RootLayout>

<style>
	.gradient-homepage-one {
		background-size: cover;
		background-image:
			radial-gradient(at 24% 25%, color-mix(in oklab, var(--color-primary-500) 30%, transparent) 0px, transparent 30%),
			radial-gradient(at 35% 13%, color-mix(in oklab, var(--color-success-500) 18%, transparent) 0px, transparent 30%),
			radial-gradient(at 100% 64%, color-mix(in oklab, var(--color-error-500) 3%, transparent) 0px, transparent 40%);
	}

	.gradient-homepage-two {
		background-size: cover;
		background-image:
			radial-gradient(at 25% 40%, color-mix(in oklab, var(--color-primary-500) 10%, transparent) 0px, transparent 35%),
			radial-gradient(at 100% 58%, color-mix(in oklab, var(--color-success-500) 5%, transparent) 0px, transparent 35%);
	}
</style>
