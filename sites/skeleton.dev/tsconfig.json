{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"moduleResolution": "Bundler",
		"paths": {
			"@layouts/*": ["src/layouts/*"],
			"@components/*": ["src/components/*"],
			"@examples/*": ["src/examples/*"],
			"@lib/*": ["src/lib/*"],
			"@content/*": ["src/content/*"],
			"@styles/*": ["src/styles/*"],
			"@images/*": ["src/images/*"]
		}
	},
	"include": ["src", "scripts"],
	"exclude": ["src/lib/generate-llm.ts"]
}
