{
	"name": "@skeletonlabs/skeleton-react",
	"version": "4.5.3",
	"description": "The React package for Skeleton.",
	"author": "endigo9740 <chris@skeletonlabs.dev>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skeletonlabs/skeleton.git",
		"directory": "packages/skeleton-react"
	},
	"scripts": {
		"build": "tsdown",
		"check": "tsc",
		"prepack": "pnpm build && clean-package",
		"postpack": "clean-package restore"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"style": "./src/index.css"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"dependencies": {
		"@internationalized/date": "catalog:",
		"@skeletonlabs/skeleton-common": "workspace:*",
		"@zag-js/accordion": "catalog:",
		"@zag-js/avatar": "catalog:",
		"@zag-js/collapsible": "catalog:",
		"@zag-js/collection": "catalog:",
		"@zag-js/combobox": "catalog:",
		"@zag-js/date-picker": "catalog:",
		"@zag-js/dialog": "catalog:",
		"@zag-js/file-upload": "catalog:",
		"@zag-js/listbox": "catalog:",
		"@zag-js/menu": "catalog:",
		"@zag-js/pagination": "catalog:",
		"@zag-js/popover": "catalog:",
		"@zag-js/progress": "catalog:",
		"@zag-js/radio-group": "catalog:",
		"@zag-js/rating-group": "catalog:",
		"@zag-js/react": "catalog:",
		"@zag-js/slider": "catalog:",
		"@zag-js/switch": "catalog:",
		"@zag-js/tabs": "catalog:",
		"@zag-js/tags-input": "catalog:",
		"@zag-js/toast": "catalog:",
		"@zag-js/toggle-group": "catalog:",
		"@zag-js/tooltip": "catalog:",
		"@zag-js/tree-view": "catalog:"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@vitejs/plugin-react": "catalog:",
		"@vitest/browser-playwright": "catalog:",
		"clean-package": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vitest-browser-react": "catalog:"
	},
	"license": "MIT",
	"type": "module",
	"clean-package": {
		"remove": [
			"scripts",
			"devDependencies",
			"clean-package"
		],
		"replace": {
			"exports": {
				".": {
					"types": "./dist/index.d.mts",
					"import": "./dist/index.mjs",
					"style": "./dist/index.css"
				}
			}
		}
	}
}
