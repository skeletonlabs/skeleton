{
	"name": "@skeletonlabs/skeleton-svelte",
	"version": "1.5.0",
	"description": "The Svelte package for Skeleton.",
	"author": "endigo9740 <chris@skeletonlabs.dev>",
	"scripts": {
		"build": "svelte-kit sync && svelte-package --input src --output dist",
		"dev": "pnpm build --watch",
		"test": "vitest run",
		"test:watch": "vitest run --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./composed": {
			"types": "./dist/composed/index.d.ts",
			"svelte": "./dist/composed/index.js",
			"default": "./dist/composed/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*"
	],
	"dependencies": {
		"@zag-js/accordion": "catalog:",
		"@zag-js/avatar": "catalog:",
		"@zag-js/combobox": "catalog:",
		"@zag-js/dialog": "catalog:",
		"@zag-js/file-upload": "catalog:",
		"@zag-js/pagination": "catalog:",
		"@zag-js/popover": "catalog:",
		"@zag-js/progress": "catalog:",
		"@zag-js/radio-group": "catalog:",
		"@zag-js/rating-group": "catalog:",
		"@zag-js/slider": "catalog:",
		"@zag-js/svelte": "catalog:",
		"@zag-js/switch": "catalog:",
		"@zag-js/tabs": "catalog:",
		"@zag-js/tags-input": "catalog:",
		"@zag-js/toast": "catalog:",
		"@zag-js/tooltip": "catalog:"
	},
	"peerDependencies": {
		"svelte": "^5.20.0"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "workspace:*",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.24.0",
		"@sveltejs/package": "^2.4.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"jsdom": "^26.1.0",
		"publint": "^0.3.12",
		"svelte": "catalog:",
		"svelte-check": "^4.2.2",
		"tailwindcss": "catalog:",
		"tslib": "^2.8.1",
		"typescript": "catalog:",
		"vite": "^7.0.4",
		"vitest": "3.2.4"
	},
	"type": "module"
}
