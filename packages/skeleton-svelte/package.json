{
	"name": "@skeletonlabs/skeleton-svelte",
	"version": "1.0.0-next.18",
	"description": "The Svelte package for Skeleton.",
	"author": "endigo9740 <chris@skeletonlabs.dev>",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-package",
		"package:watch": "svelte-package --watch",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"test": "vitest run"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"./dist/**/*.svelte",
		"./dist/**/*.js",
		"./dist/**/*.d.ts",
		"./dist/**/*.cjs",
		"./dist/**/*.d.cts"
	],
	"dependencies": {
		"@zag-js/accordion": "catalog:",
		"@zag-js/avatar": "catalog:",
		"@zag-js/combobox": "catalog:",
		"@zag-js/dialog": "catalog:",
		"@zag-js/file-upload": "catalog:",
		"@zag-js/pagination": "catalog:",
		"@zag-js/popover": "catalog:",
		"@zag-js/progress": "catalog:",
		"@zag-js/radio-group": "catalog:",
		"@zag-js/rating-group": "catalog:",
		"@zag-js/slider": "catalog:",
		"@zag-js/svelte": "catalog:",
		"@zag-js/switch": "catalog:",
		"@zag-js/tabs": "catalog:",
		"@zag-js/tags-input": "catalog:",
		"@zag-js/tooltip": "catalog:"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "workspace:*",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@tailwindcss/forms": "^0.5.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"autoprefixer": "^10.4.19",
		"jsdom": "^25.0.1",
		"lucide-svelte": "^0.465.0",
		"postcss": "^8.4.49",
		"postcss-load-config": "^6.0.1",
		"publint": "^0.2.12",
		"svelte": "catalog:",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.16",
		"tslib": "^2.8.1",
		"typescript": "catalog:",
		"vite": "^6.0.2",
		"vite-plugin-tw-plugin-watcher": "workspace:*",
		"vitest": "3.0.0-beta.1"
	},
	"type": "module"
}
