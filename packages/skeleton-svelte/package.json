{
	"name": "@skeletonlabs/skeleton-svelte",
	"version": "1.0.0-next.20",
	"description": "The Svelte package for Skeleton.",
	"author": "endigo9740 <chris@skeletonlabs.dev>",
	"scripts": {
		"build": "svelte-package --input src --output dist",
		"dev": "svelte-package --input src --output dist --watch",
		"test": "vitest run",
		"test:watch": "vitest run --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"./dist/**/*.svelte",
		"./dist/**/*.js",
		"./dist/**/*.d.ts",
		"./dist/**/*.cjs",
		"./dist/**/*.d.cts"
	],
	"dependencies": {
		"@zag-js/accordion": "catalog:",
		"@zag-js/avatar": "catalog:",
		"@zag-js/combobox": "catalog:",
		"@zag-js/dialog": "catalog:",
		"@zag-js/file-upload": "catalog:",
		"@zag-js/pagination": "catalog:",
		"@zag-js/popover": "catalog:",
		"@zag-js/progress": "catalog:",
		"@zag-js/radio-group": "catalog:",
		"@zag-js/rating-group": "catalog:",
		"@zag-js/slider": "catalog:",
		"@zag-js/svelte": "catalog:",
		"@zag-js/switch": "catalog:",
		"@zag-js/tabs": "catalog:",
		"@zag-js/tags-input": "catalog:",
		"@zag-js/tooltip": "catalog:"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "workspace:*",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/vite": "^4.0.2",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"jsdom": "^25.0.1",
		"publint": "^0.2.12",
		"svelte": "catalog:",
		"svelte-check": "^4.1.1",
		"tailwindcss": "catalog:",
		"tslib": "^2.8.1",
		"typescript": "catalog:",
		"vite": "^6.0.2",
		"vitest": "3.0.7"
	},
	"type": "module"
}
