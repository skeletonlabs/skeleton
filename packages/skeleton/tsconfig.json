{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"moduleDetection": "force",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"],
		"strict": true,
		"declaration": true,
		"noEmit": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["src/*.ts"]
}
