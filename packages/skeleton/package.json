{
	"name": "@skeletonlabs/skeleton",
	"version": "3.1.3",
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/skeletonlabs/skeleton.git"
	},
	"exports": {
		".": {
			"style": "./dist/index.css",
			"default": "./dist/index.css"
		},
		"./themes/*": {
			"style": "./dist/themes/*.css",
			"default": "./dist/themes/*.css"
		},
		"./optional/*": {
			"style": "./dist/optional/*.css",
			"default": "./dist/optional/*.css"
		}
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"tailwindcss": "^4.0.0"
	},
	"devDependencies": {
		"sass-embedded": "^1.86.0",
		"tinyglobby": "^0.2.12",
		"vite": "^6.2.5"
	},
	"type": "module",
	"license": "MIT"
}
