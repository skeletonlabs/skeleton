{
	"name": "@skeletonlabs/skeleton",
	"version": "3.0.0-next.7",
	"description": "Core plugin for Skeleton.",
	"scripts": {
		"build": "pnpm build:jss && tsup",
		"build:jss": "tsx --tsconfig ./src/plugin/tsconfig.json ./scripts/generate-jss.ts",
		"convert": "tsx --tsconfig ./src/plugin/tsconfig.json ./scripts/convert-theme.ts && pnpm format"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/skeletonlabs/skeleton.git"
	},
	"bugs": {
		"url": "https://github.com/skeletonlabs/skeleton/issues"
	},
	"keywords": [
		"cli",
		"components",
		"ui",
		"component",
		"svelte",
		"component-library",
		"ui-components",
		"ui-framework",
		"tailwind",
		"tailwindcss",
		"components-library",
		"sveltekit"
	],
	"license": "MIT",
	"homepage": "https://skeleton.dev/",
	"devDependencies": {
		"@types/postcss-import": "^14.0.3",
		"postcss": "8.4.47",
		"postcss-import": "16.1.0",
		"postcss-load-config": "6.0.1",
		"tailwindcss": "3.4.14",
		"tslib": "2.8.0",
		"tsup": "^8.3.0",
		"tsx": "^4.19.1",
		"typescript": "catalog:"
	},
	"dependencies": {
		"postcss-js": "4.0.1",
		"postcss-selector-parser": "^7.0.0"
	},
	"peerDependencies": {
		"tailwindcss": ">=3.0.0"
	},
	"type": "module",
	"main": "./dist/core/index.js",
	"types": "./dist/core/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/core/index.d.ts",
				"default": "./dist/core/index.js"
			},
			"require": {
				"types": "./dist/core/index.d.cts",
				"default": "./dist/core/index.cjs"
			}
		},
		"./plugin": {
			"import": {
				"types": "./dist/plugin/index.d.ts",
				"default": "./dist/plugin/index.js"
			},
			"require": {
				"types": "./dist/plugin/index.d.cts",
				"default": "./dist/plugin/index.cjs"
			}
		},
		"./themes": {
			"import": {
				"types": "./dist/themes/index.d.ts",
				"default": "./dist/themes/index.js"
			},
			"require": {
				"types": "./dist/themes/index.d.cts",
				"default": "./dist/themes/index.cjs"
			}
		}
	},
	"files": [
		"dist"
	]
}
