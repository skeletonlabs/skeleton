{
	"name": "@skeletonlabs/monorepo",
	"private": true,
	"type": "module",
	"scripts": {
		"dev:docs": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/skeleton-common --filter @skeletonlabs/skeleton.dev dev",
		"dev:themes": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/themes.skeleton.dev dev",
		"dev:svelte": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/skeleton-common --filter @skeletonlabs/playground-skeleton-svelte dev",
		"dev:react": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/skeleton-common --filter @skeletonlabs/playground-skeleton-react dev",
		"pretest": "pnpm playwright install chromium --with-deps",
		"test": "vitest run",
		"check": "pnpm --recursive --aggregate-output --reporter=append-only --parallel check",
		"format": "prettier . --cache --write --ignore-unknown --experimental-cli",
		"format:check": "prettier . --cache --check --ignore-unknown --experimental-cli",
		"lint": "oxlint --type-aware --fix",
		"lint:check": "oxlint --type-aware",
		"changeset:publish": "changeset publish",
		"changeset:version": "changeset version && pnpm format"
	},
	"devDependencies": {
		"@changesets/cli": "catalog:",
		"@playwright/test": "catalog:",
		"@prettier/plugin-oxc": "catalog:",
		"@svitejs/changesets-changelog-github-compact": "catalog:",
		"@trivago/prettier-plugin-sort-imports": "catalog:",
		"oxlint": "catalog:",
		"oxlint-tsgolint": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-astro": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"engines": {
		"node": "22.21.1",
		"pnpm": "10.23.0"
	},
	"pnpm": {
		"overrides": {
			"vite": "catalog:",
			"astro>vite": "^6.4.1"
		}
	},
	"packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
