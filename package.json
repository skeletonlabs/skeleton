{
	"name": "skeleton",
	"version": "1.0.0",
	"private": true,
	"description": "monorepo for @skeletonlabs/skeleton",
	"keywords": [
		"cli",
		"components",
		"ui",
		"component",
		"svelte",
		"react",
		"component-library",
		"ui-components",
		"ui-framework",
		"tailwind",
		"tailwindcss",
		"components-library",
		"sveltekit"
	],
	"homepage": "https://skeleton.dev/",
	"bugs": {
		"url": "https://github.com/skeletonlabs/skeleton/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/skeletonlabs/skeleton.git"
	},
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "pnpm --recursive build",
		"build:packages": "pnpm --recursive --filter \"./packages/*\" build",
		"dev": "pnpm --parallel dev",
		"dev:docs": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/skeleton.dev dev",
		"dev:themes": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/skeleton-themes dev",
		"dev:core": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/playground-skeleton dev",
		"dev:svelte": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/skeleton-svelte --filter @skeletonlabs/skeleton-common --filter @skeletonlabs/playground-skeleton-svelte dev",
		"dev:react": "pnpm --parallel --filter @skeletonlabs/skeleton --filter @skeletonlabs/skeleton-react --filter @skeletonlabs/skeleton-common --filter @skeletonlabs/playground-skeleton-react dev",
		"test": "pnpm --recursive test",
		"test:watch": "pnpm --recursive test:watch",
		"check": "pnpm --recursive check",
		"format": "prettier . --write",
		"format:check": "prettier . --check",
		"lint": "eslint . --fix",
		"lint:check": "eslint .",
		"changeset:publish": "changeset publish",
		"postinstall": "pnpm build:packages"
	},
	"devDependencies": {
		"@changesets/cli": "catalog:",
		"@eslint/js": "catalog:",
		"@svitejs/changesets-changelog-github-compact": "catalog:",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-plugin-astro": "catalog:",
		"eslint-plugin-prettier": "catalog:",
		"eslint-plugin-react": "catalog:",
		"eslint-plugin-svelte": "catalog:",
		"globals": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-astro": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"prettier-plugin-tailwindcss": "catalog:",
		"typescript-eslint": "catalog:"
	},
	"packageManager": "pnpm@10.12.4"
}
